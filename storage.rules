rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    function isApprovedCompany() {
      return isAuthenticated() &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isApproved == true &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.isCompany == true;
    }
    
    function isValidImageFile() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB max
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidDocumentFile() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB max
             (request.resource.contentType.matches('application/pdf') ||
              request.resource.contentType.matches('application/msword') ||
              request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.wordprocessingml.document'));
    }
    
    function isValidVideoFile() {
      return request.resource.size < 50 * 1024 * 1024 && // 50MB max
             request.resource.contentType.matches('video/.*');
    }
    
    // CVs - User can only access their own CVs
    match /cvs/{userId}/{fileName} {
      allow read: if isOwner(userId) || isApprovedCompany() || isAdmin();
      allow write: if isOwner(userId) && isValidDocumentFile();
      allow delete: if isOwner(userId);
    }
    
    // Video Resumes - User can only access their own videos
    match /video_resumes/{userId}/{fileName} {
      allow read: if isOwner(userId) || isApprovedCompany() || isAdmin();
      allow write: if isOwner(userId) && isValidVideoFile();
      allow delete: if isOwner(userId);
    }
    
    // Profile Images - Anyone can read, only owner can write
    match /profile_images/{userId}/{fileName} {
      allow read: if true; // Public read for profile images
      allow write: if isOwner(userId) && isValidImageFile();
      allow delete: if isOwner(userId);
    }
    
    // Company Logos - Anyone can read, only authenticated users can write
    match /company_logos/{companyId}/{fileName} {
      allow read: if true; // Public read for company logos
      allow write: if isAuthenticated() && isValidImageFile();
      allow delete: if isAuthenticated();
    }

    // Company KYC Documents - Only owning company and admins can access
    match /company_kyc_docs/{companyId}/{fileName} {
      allow read: if isOwner(companyId) || isAdmin();
      allow write: if isOwner(companyId) && isValidDocumentFile();
      allow delete: if isOwner(companyId) || isAdmin();
    }
  }
}

